<!-- help us in edit the the existing content -->
<% layout("layouts/boilerplate")%>

<!-- form card for editing listings -->
<div class="form-card">
  <h3 class="form-heading"><i class="bi bi-pencil-square me-2"></i>Update Your Property

</h3>

  <!-- edit form starts -->
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

    <!-- Title -->
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input 
        name="listing[title]" 
        value="<%= listing.title %>" 
        type="text" 
        class="form-control"
        required
      />
      <div class="valid-feedback">✅ Title looks good!</div>
      <div class="invalid-feedback">❌ Please enter a title.</div>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea 
        name="listing[description]" 
        class="form-control"
        rows="3"
        required
      ><%= listing.description %></textarea>
      <div class="valid-feedback">✅ Description looks fine!</div>
      <div class="invalid-feedback">❌ Please add a description.</div>
    </div>

    <!-- Image URL -->
     <div class="mb-3">
      Original Image:<br>
      <img src="<%= listing.image.url %>" alt="Listing Image" class="img-preview"/>


     </div>
    <div class="mb-3">
      <label class="form-label">Image</label>
      <input 
        name="image" 
       
        type="file" 
        class="form-control"
       
      />
      <div class="valid-feedback">✅ Image  looks valid!</div>
      <div class="invalid-feedback">❌ Please provide an image URL.</div>
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label class="form-label">Price</label>
      <input 
        name="listing[price]" 
        value="<%= listing.price %>" 
        type="number" 
        class="form-control"
        required
      />
      <div class="valid-feedback">✅ Price updated successfully!</div>
      <div class="invalid-feedback">❌ Please enter a valid price.</div>
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label class="form-label">Country</label>
      <input 
        name="listing[country]" 
        value="<%= listing.country %>" 
        type="text" 
        class="form-control"
        required
      />
      <div class="valid-feedback">✅ Country name looks fine!</div>
      <div class="invalid-feedback">❌ Please enter a country name.</div>
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label class="form-label">Location</label>
      <input 
        name="listing[location]" 
        value="<%= listing.location %>" 
        type="text" 
        class="form-control"
        required
      />
      <div class="valid-feedback">✅ Location looks great!</div>
      <div class="invalid-feedback">❌ Please provide a location.</div>
    </div>

    <!-- Submit Button -->
    <button class="add-btn"><i class="bi bi-check-circle me-2"></i>Update</button>

  </form>
  <!-- edit form ends -->
</div>

<!-- linking js -->

